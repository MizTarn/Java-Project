	public void setDisableActions(boolean flag) {
		btnAction.setDisable(!flag);
		for (Node nd : hand.getChildren()) {
			nd.setDisable(!flag);
		}
		labelMove.setVisible(flag);
	}

//	public void setEndGame(String nick) {
