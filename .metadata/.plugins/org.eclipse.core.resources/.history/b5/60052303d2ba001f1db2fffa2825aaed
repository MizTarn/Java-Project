	public void setTextAction(String str) {
		btnAction.setText(str);
		if (Objects.equals(str, "Play")) {
			System.out.println("DAY LA DISCARD");
			btnAction.setOnAction(this::play);
		} else {
			btnAction.setDisable(true);
		}
	}



