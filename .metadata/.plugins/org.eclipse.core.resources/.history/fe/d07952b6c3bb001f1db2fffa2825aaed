/* Style for the card regions */
.card {
    -fx-background-color: white;
    -fx-border-color: black;
    -fx-border-width: 2px;
    -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 10, 0, 2, 2);
    -fx-background-radius: 5px;
    -fx-border-radius: 5px;
    -fx-pref-width: 150px; /* Increased width for larger cards */
    -fx-pref-height: 225px; /* Increased height for larger cards */
}

/* Hover effect for cards */
.card:hover {
    -fx-transform: scale(1.1);
    -fx-cursor: hand;
}

/* Optional: Add an animation effect when hovered */
.card:hover {
    -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.7), 15, 0, 4, 4);
}

/* Style for the overall game layout */
.root {
    -fx-font-family: 'Arial Rounded MT Bold';
    -fx-font-size: 16px;
    -fx-text-fill: white;
    -fx-background-color: #445f44;
}

/* Labels styling */
.label {
    -fx-font-size: 20px;
    -fx-font-smoothing-type: lcd;
}

/* Header labels or important text */
.label-bold {
