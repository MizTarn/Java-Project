package test;

import java.io.*;
import java.net.ServerSocket;
import java.net.Socket;
import java.util.*;

import controller.Connection;

public class Server {
    private static ServerSocket server;
    private static final HashMap<String, Session> sessions = new HashMap<>();

    public static void main(String[] args) {
        try {
            server = new ServerSocket(1234);
            System.out.println("Server started on port 1234...");

            while (true) {
                Socket socket = server.accept();
                System.out.println("New client connected: " + socket.getInetAddress());

                // Tạo luồng xử lý cho client mới
                Connection connection = new Connection(socket);
                Thread thread = new Thread(connection);
                thread.setDaemon(true);
                thread.start();
            }
        } catch (IOException ex) {
            System.err.println("Error in server: " + ex.getMessage());
            ex.printStackTrace();
        }
    }

    // Quản lý session
    public static synchronized void createSession(String sessionId, Session session) {
        sessions.put(sessionId, session);
    }

    public static synchronized Session getSession(String sessionId) {
        return sessions.get(sessionId);
    }
}
