package player;

import java.util.ArrayList;
import java.util.List;

import card.Card;

public class AIPlayer extends Player {
    private String name;
    private List<Card> hand;

    public AIPlayer(String name) {
        this.name = name;
        this.hand = new ArrayList<>();
    }

    @Override
    public String getName() {
        return name;
    }

    @Override
    public List<Card> getHand() {
        return hand;
    }

    @Override
    public void addCard(Card card) {
        hand.add(card);
    }

    @Override
    public void removeCard(Card card) {
        hand.remove(card);
    }

    @Override
    public boolean hasCards() {
        return !hand.isEmpty();
    }

	@Override
	public Card chooseAttackCard(List<Card> onTable) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public Card chooseDefendCard(Card attackCard, String trumpSuit) {
		// TODO Auto-generated method stub
		return null;
	}
}
